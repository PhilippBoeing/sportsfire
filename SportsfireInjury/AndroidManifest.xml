<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sportsfire"
    android:versionCode="1"
    android:versionName="1.0" >
<uses-permission
        android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission
        android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission
        android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission
        android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission
        android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission
        android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission
        android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission
        android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sportsfire.MainPage"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sportsfire.injury.MainPage"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sportsfire.injury.InjuryForm"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.sportsfire.injury.ListPageActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sportsfire.injury.SquadListActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sportsfire.injury.PlayerListActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sportsfire.injury.PlayerInjuryActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sportsfire.screening.ScreeningMainPage"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sportsfire.screening.InputPageActivity"
            android:screenOrientation="landscape" >
        </activity>
     	<activity
            android:name="com.sportsfire.screening.AnalysisPageActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sportsfire.screening.AnalysisGraphPage"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sportsfire.screening.TestInputForm"
            android:label="@string/title_activity_test_input_form"
            android:screenOrientation="landscape"  >
        </activity>
        <activity
            android:name="com.sportsfire.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="landscape"  >
        </activity>
        <activity
            android:name="com.sportsfire.sync.AuthenticatorActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog"
            android:excludeFromRecents="true"
            android:configChanges="orientation"
            >
            <!--
                No intent-filter here! This activity is only ever launched by
                someone who explicitly knows the class name
            -->
        </activity>
        
        <service
            android:name="com.sportsfire.sync.AuthenticationService"
            android:exported="true">
            <intent-filter>
                <action
                    android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
    </application>

</manifest>
