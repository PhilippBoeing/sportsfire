<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sportsfire"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainPage"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".injury.MainPage"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".injury.InjuryForm"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="landscape">
            
        </activity>
        <activity
            android:name=".injury.ListPageActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".injury.SquadListActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".injury.PlayerListActivity"
            android:screenOrientation="landscape">
        </activity>
         <activity
            android:name=".injury.PlayerInjuryActivity"
            android:screenOrientation="landscape">
        </activity>
         <activity
            android:name=".screening.MainPage"
            android:screenOrientation="landscape">
        </activity>
         <activity
            android:name=".screening.TestSelectionActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>