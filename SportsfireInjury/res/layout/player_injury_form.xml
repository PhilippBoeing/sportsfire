<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="stateHidden" >

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:alignmentMode="alignBounds"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:orientation="horizontal"
        android:useDefaultMargins="true" >

        <LinearLayout
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Injury" />

            <EditText
                android:id="@+id/ir1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Date Of Injury:"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:onClick="showDatePickerDialog" />
        </LinearLayout>

        <LinearLayout
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="left"
            android:layout_row="0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Return to full Participation:" />

            <EditText
                android:id="@+id/ir1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Date Of Return"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:onClick="showDatePickerDialog" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_row="1" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Injured body part"/>

        <GridLayout
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:columnCount="3" >

            <CheckBox
                android:id="@+id/ir2a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Head / Face" 
                android:onClick="onCheckBoxClick" />
            

            <CheckBox
                android:id="@+id/ir2a2"
                android:onClick="onCheckBoxClick"
                android:layout_column="1"
                android:layout_row="0"
                android:text="Shoulder / clavicula" />

            <CheckBox
                android:id="@+id/ir2a3"
                android:onClick="onCheckBoxClick"
                android:layout_column="2"
                android:layout_row="0"
                android:text="hip / groin" />

            <CheckBox
                android:id="@+id/ir2a4"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="neck / cervical spine" />

            <CheckBox
                android:id="@+id/ir2a5"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="upper arm" />

            <CheckBox
                android:id="@+id/ir2a6"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:text="thigh" />

            <CheckBox
                android:id="@+id/ir2a7"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="sternum / ribs / upper back" />

            <CheckBox
                android:id="@+id/ir2a8"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="elbow" />

            <CheckBox
                android:id="@+id/ir2a9"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:text="knee" />

            <CheckBox
                android:id="@+id/ir2a10"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="abdomen" />

            <CheckBox
                android:id="@+id/ir2a11"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="forearm" />

            <CheckBox
                android:id="@+id/ir2a12"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                android:text="lower leg / Achilles tendon" />

            <CheckBox
                android:id="@+id/ir2a13"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="low back / sacrum / pelvis" />

            <CheckBox
                android:id="@+id/ir2a14"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:text="wrist" />

            <CheckBox
                android:id="@+id/ir2a15"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="4"
                android:text="ankle" />

            <CheckBox
                android:id="@+id/ir2a16"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:text="hand / finger / thumb" />

            <CheckBox
                android:id="@+id/ir2a17"
                android:onClick="onCheckBoxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:text="foot / toe" />
        </GridLayout>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Injured Body Part" />

        <GridLayout
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="5"
            android:columnCount="3" >

                <RadioButton
                    android:id="@+id/ir2b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="right" />

                <RadioButton
                    android:id="@+id/ir2b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="left" />

                <RadioButton
                    android:id="@+id/ir2b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="not applicable" />
        </GridLayout>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:text="Type of Injury" />

        <GridLayout
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="7"
            android:columnCount="3" >

            <CheckBox
                android:id="@+id/ir31"
                android:onClick="onCheckBoxClick"
                android:layout_column="0"
                android:layout_row="0"
                android:text="concussion with or without loss of consciousness" />

            <CheckBox
                android:id="@+id/ir32"
                android:onClick="onCheckBoxClick"
                android:layout_column="1"
                android:layout_row="0"
                android:text="lesion of meniscus or cartilage" />

            <CheckBox
                android:id="@+id/ir33"
                android:onClick="onCheckBoxClick"
                android:layout_column="2"
                android:layout_row="0"
                android:text="haermatoma / contusion / bruise" />

            <CheckBox
                android:id="@+id/ir34"
                android:onClick="onCheckBoxClick"
                android:layout_column="0"
                android:layout_row="1"
                android:text="fracture" />

            <CheckBox
                android:id="@+id/ir35"
                android:onClick="onCheckBoxClick"
                android:layout_column="1"
                android:layout_row="1"
                android:text="muscle rupture / strain / tear / cramps" />

             <CheckBox
                android:id="@+id/ir36"
                android:onClick="onCheckBoxClick"
                android:layout_column="2"
                android:layout_row="1"
                android:text="abrasion" />
             
              <CheckBox
                android:id="@+id/ir37"
                android:onClick="onCheckBoxClick"
                android:layout_column="0"
                android:layout_row="2"
                android:text="other bone injury" />
            
            <CheckBox
                android:id="@+id/ir38"
                android:onClick="onCheckBoxClick"
                android:layout_column="1"
                android:layout_row="2"
                android:text="laceration" />

            <CheckBox
                android:id="@+id/ir39"
                android:onClick="onCheckBoxClick"
                android:layout_column="2"
                android:layout_row="2"
                android:text="dislocation / subluxation" />

            <CheckBox
                android:id="@+id/ir310"
                android:onClick="onCheckBoxClick"
                android:layout_column="0"
                android:layout_row="3"
                android:text="tendon injury / rupture / tendinosis / bursitis" />

            <CheckBox
                android:id="@+id/ir311"
                android:onClick="onCheckBoxClick"
                android:layout_column="1"
                android:layout_row="3"
                android:text="nerve injury" />

            <CheckBox
                android:id="@+id/ir312"
                android:onClick="onCheckBoxClick"
                android:layout_column="2"
                android:layout_row="3"
                android:text="sprain / ligament injury" />

            <CheckBox
                android:id="@+id/ir313"
          		android:onClick="onCheckBoxClick"
                android:layout_column="0"
                android:layout_row="4"
                android:text="dental injury" />

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="8" >

            <CheckBox
                android:id="@+id/ir314"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="other injury (please specify)" />

            <EditText
                android:id="@+id/ir314text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Injury:"
                android:ems="30"
                android:inputType="text"
                android:imeOptions="actionDone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="9"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="Diagnosis (text or Orchard code):" />

            <EditText
                android:id="@+id/ir4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Diagnosis: "
                android:inputType="text"
                 android:ems="10"
                android:text="" />

        </LinearLayout>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="10"
            android:text="Has the player had a previous injury of the same type at the same site (i.e. this injury is a recurrence)" />

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="11"
            android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ir51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes" />

                <RadioButton
                    android:id="@+id/ir52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="20sp"
            android:layout_row="12"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If yes specify date of player's return to full participation from the previous injury" />

            <EditText
                android:id="@+id/ir52text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Previous date of return"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:onClick="showDatePickerDialog" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="13"
            android:text="Was the injury caused by overuse or trauma?" />

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="14"
            android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ir61"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="overuse" />

                <RadioButton
                    android:id="@+id/ir62"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="trauma" />

        </RadioGroup>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="15"
            android:text="When did the injury occur? " />

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="16"
            android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ir71"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="training" />

                <RadioButton
                    android:id="@+id/ir72"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="match" />

        </RadioGroup>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="17"
            android:text="Was the injury caused by contact or collision?" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="18" >

            <CheckBox
                android:id="@+id/ir81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="no" />

            <CheckBox
                android:id="@+id/ir82"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="yes, with another player" />

            <CheckBox
                android:id="@+id/ir83"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="yes, with the ball" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_row="2" >

                <CheckBox
                    android:id="@+id/ir84"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes, with other object (specify)" />

                <EditText
                    android:id="@+id/ir84text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="Injury:"
                    android:ems="30" />
            </LinearLayout>
        </GridLayout>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="19"
            android:text="Did the referee indicate that the action leading to the injury was a violation of the laws?" />

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="20"
            android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ir91"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no" />

                <RadioButton
                    android:id="@+id/ir92"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes, free kick / penalty" />

                <RadioButton
                    android:id="@+id/ir93"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes, yellow card" />
                <RadioButton
                    android:id="@+id/ir94"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes, red card" />
        </RadioGroup>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="21"
            android:text="If yes, was the referee's sanction against:" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="22" >

            <CheckBox
                android:id="@+id/ir101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="injured player" />

            <CheckBox
                android:id="@+id/ir102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="opponent" />
        </GridLayout>
         <Button
        android:id="@+id/saveForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSaveForm"
        android:text="Save Form" />
    </GridLayout>
    

</ScrollView>