<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="stateHidden" >

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:orientation="horizontal"
        android:useDefaultMargins="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Injury" />

            <EditText
                android:id="@+id/ir1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Date Of Injury:"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:onClick="showDatePickerDialog" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Return to full Participation:" />

            <EditText
                android:id="@+id/ir1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Date Of Return"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:onClick="showDatePickerDialog" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_row="1" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Injured body part" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="3" >

            <Spinner
                android:id="@+id/orchardSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left" />

            <Spinner
                android:id="@+id/orchardSpinnerDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Injured Body Part" />

        <RadioGroup
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/ir2b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="right" />

            <RadioButton
                android:id="@+id/ir2b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="left" />

            <RadioButton
                android:id="@+id/ir2b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="not applicable" />
        </RadioGroup>

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:text="Type of Injury" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="7" >

            <Spinner
                android:id="@+id/orchardSpinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left" />

            <Spinner
                android:id="@+id/orchardSpinnerDetail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="8" >

            <CheckBox
                android:id="@+id/ir314"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="other injury (please specify)" />

            <EditText
                android:id="@+id/ir314text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Injury:"
                android:ems="30"
                android:imeOptions="actionDone"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="9"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diagnosis (text or Orchard code):" />

            <EditText
                android:id="@+id/ir4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Diagnosis: "
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="text" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="10"
            android:text="Has the player had a previous injury of the same type at the same site (i.e. this injury is a recurrence)" />

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="11"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/ir51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes" />

            <RadioButton
                android:id="@+id/ir52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="20sp"
            android:layout_row="12"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If yes specify date of player&apos;s return to full participation from the previous injury" />

            <EditText
                android:id="@+id/ir52text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Previous date of return"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:onClick="showDatePickerDialog" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextView08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="13"
            android:text="Was the injury caused by overuse or trauma?" />

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="14"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/ir61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="overuse" />

            <RadioButton
                android:id="@+id/ir62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trauma" />
        </RadioGroup>

        <TextView
            android:id="@+id/TextView09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="15"
            android:text="When did the injury occur? " />

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="16"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/ir71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="training" />

            <RadioButton
                android:id="@+id/ir72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="match" />
        </RadioGroup>

        <TextView
            android:id="@+id/TextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="17"
            android:text="Was the injury caused by contact or collision?" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="18" >

            <CheckBox
                android:id="@+id/ir81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="no" />

            <CheckBox
                android:id="@+id/ir82"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="yes, with another player" />

            <CheckBox
                android:id="@+id/ir83"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="yes, with the ball" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_row="2" >

                <CheckBox
                    android:id="@+id/ir84"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes, with other object (specify)" />

                <EditText
                    android:id="@+id/ir84text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="30"
                    android:imeOptions="actionDone"
                    android:inputType="text" />
            </LinearLayout>
        </GridLayout>

        <TextView
            android:id="@+id/TextView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="19"
            android:text="Did the referee indicate that the action leading to the injury was a violation of the laws?" />

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="20"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/ir91"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no" />

            <RadioButton
                android:id="@+id/ir92"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes, free kick / penalty" />

            <RadioButton
                android:id="@+id/ir93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes, yellow card" />

            <RadioButton
                android:id="@+id/ir94"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes, red card" />
        </RadioGroup>

        <TextView
            android:id="@+id/TextView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="21"
            android:text="If yes, was the referee&apos;s sanction against:" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="22" >

            <CheckBox
                android:id="@+id/ir101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="injured player" />

            <CheckBox
                android:id="@+id/ir102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="opponent" />
        </GridLayout>

        <Button
            android:id="@+id/saveForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="23"
            android:onClick="onSaveForm"
            android:text="Save Form" />

        <Space
            android:layout_width="148dp"
            android:layout_height="15dp"
            android:layout_column="1"
            android:layout_row="23" />

        <Space
            android:layout_width="100dp"
            android:layout_column="0"
            android:layout_row="24" />

        <Space
            android:layout_width="100dp"
            android:layout_column="0"
            android:layout_row="24" />

        <Space
            android:layout_width="100dp"
            android:layout_row="1" />

        <Space
            android:layout_width="100dp"
            android:layout_height="169dp"
            android:layout_row="7" />

        <Space
            android:layout_width="100dp"
            android:layout_row="24" />
    </GridLayout>

</ScrollView>